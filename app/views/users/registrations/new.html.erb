<div class= "akino">
<h2>新規登録</h2>

<link rel="stylesheets" type="text/css" href="user_new.scss">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.text_field :name, autofocus: true, placeholder:"ユーザーネーム" %>
  </div>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"メールアドレス" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password",placeholder:"パスワード" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password",placeholder:"パスワードの確認" %>
  </div>

  <div class="actions">
    <%= f.submit "登録"  %>
  </div><br>
<% end %>

<%= link_to "一覧に戻る", posts_path %>

</div>



